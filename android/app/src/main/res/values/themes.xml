<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mitra_android" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    </style>


    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Add attributes here -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>
    <!--To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/default_200</item>
        <item name="hintTextColor">@color/default_200</item>
        <item name="android:textColorHint">@color/text_heading</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/light_color_heading</item>
        <item name="colorControlActivated">@color/default_200</item>
        <item name="colorControlHighlight">@color/default_200</item>
    </style>


    <style name="BtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="minHeight">48dp</item>
        <item name="minWidth">88dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BtnStyle_Gold" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/curver_corner_gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="minHeight">48dp</item>
        <item name="minWidth">88dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BtnStyle_open" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">Open App</item>
        <item name="minHeight">48dp</item>
        <item name="minWidth">88dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BtnStyle_highlight" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/delete_button_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/black</item> <!-- Whatever color you want-->
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MyCustomTextAppearance" parent="Theme.Freshchat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/default_200</item>
        <item name="android:textStyle">normal</item></style>

    <style name="MyCustomTextAppearancee" parent="Theme.Freshchat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="colorPrimary">@color/default_200</item>
        <item name="android:textStyle">normal</item></style>


    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:textColor">@color/border_text_color</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayout_Theme">
        <item name="android:singleLine">true</item>
    </style>


    <!-- Chat Bubbles -->

    <!--<item name="freshchatChatBubbleLeft">@drawable/freshchat_chat_bubble_left</item>

    <item name="freshchatChatBubbleRight">@drawable/freshchat_chat_bubble_right</item>
-->


</resources>