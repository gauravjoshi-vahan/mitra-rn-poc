<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/parentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/bac_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="@dimen/dimen_8dp">

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ripple_effect"
                        android:padding="4dp"
                        android:src="@drawable/ic_back_arrow_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_toEndOf="@+id/back_arrow"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:text="@string/cashout_money"
                        android:textColor="@color/black_v2"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notification_v2"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_profile" />


                    <TextView
                        android:id="@+id/tv_trans_hitstory_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:paddingTop="8dp"
                        android:text="@string/paying_kumar_hegde"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_trans_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:text="+91 9726374563"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="#00000000"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/set_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textStyle="bold"
                            android:maxLength="8"
                            android:maxLines="1"
                            android:text="₹ "
                            android:textColor="@color/black"
                            android:textSize="32sp" />

                        <EditText
                            android:id="@+id/edt_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textStyle="bold"
                            android:inputType="number|numberDecimal"
                            android:maxLength="8"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="32sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/trn_cnd_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/card_background"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/you_are_eligible_for_a_cashout_of_5_000_n_from_your_earnings"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/trm_card_detail_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1A3630D3"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dimen_8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_group_19217" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_5dp"
                                    android:text="@string/want_to_cashout_more_money"
                                    android:textColor="#4943D2"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_6dp">

                                <TextView
                                    android:id="@+id/tv_cashout_tier_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/dimen_6dp"
                                    android:text="Cashout 50%"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/tv_text_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_cashout_tier_one"
                                    android:layout_centerVertical="true"
                                    android:drawablePadding="@dimen/dimen_8dp"
                                    android:text="Complete 20 Trips"
                                    android:textColor="#4943D2"
                                    android:textSize="10sp"
                                    app:drawableStartCompat="@drawable/ic_vespa_blue" />

                                <TextView
                                    android:id="@+id/text_one_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_cashout_tier_one"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dimen_4dp"
                                    android:layout_marginEnd="@dimen/dimen_4dp"
                                    android:layout_toEndOf="@+id/tv_text_one"
                                    android:text="+"
                                    android:textColor="#4943D2" />

                                <TextView
                                    android:id="@+id/tv_active_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_cashout_tier_one"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/text_one_plus"
                                    android:drawablePadding="@dimen/dimen_8dp"
                                    android:text="Stay Active for 3 days"
                                    android:textColor="#4943D2"
                                    android:textSize="10sp"
                                    app:drawableStartCompat="@drawable/ic_active_blue" />


                            </RelativeLayout>

                        </LinearLayout>


                    </RelativeLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ioo_secure" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/cta_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_bottom"
            android:elevation="3dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/bank_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ic_bank_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/bank_image"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/account_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/state_bank_of_india_8033"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/account_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/savings_account"
                            android:textColor="#AEAEAE"
                            android:textSize="14sp" />

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/transfer_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/curver_corner_12"
                    android:clickable="false"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/white"
                    tools:text="Transfer ₹ 2,880" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="POWERED BY  "
                android:textColor="#888888"
                android:textSize="14sp"
                android:visibility="gone"
                app:drawableRightCompat="@drawable/upi_1" />
        </FrameLayout>

        <TextView
            android:id="@+id/cashout_got_it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/curver_corner_12"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/confirm_cashout"
            android:textColor="@color/white" />
    </RelativeLayout>
</layout>