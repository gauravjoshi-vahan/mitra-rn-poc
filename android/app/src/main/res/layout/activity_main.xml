<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <!--Upload Doc container-->
        <LinearLayout
            android:id="@+id/rl_place_holder_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_snake_bar_color"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:visibility="gone"
            android:clickable="false"
            android:weightSum="4">

            <ImageView
                android:id="@+id/nudge_icon"
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_11dp"
                android:src="@drawable/ic_alert_12"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginStart="@dimen/dimen_20dp"/>
            <TextView
                android:id="@+id/document_pending_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:fontFamily="@font/opensanssemibold"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="0dp"
                android:textColor="@color/placeholder_color"
                android:textSize="12sp"
                tools:text="Upload Document" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:gravity="end">

                <TextView
                    android:id="@+id/document_navigation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/opensansregular"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_6dp"
                    android:text="@string/update_now_home"
                    android:textSize="@dimen/dimen_10dp" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="13dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_forward_v2"
                    app:tint="@color/black_v2" />

            </LinearLayout>


        </LinearLayout>


        <fragment
            android:id="@+id/nav_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_below="@+id/rl_place_holder_document"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="3dp"/>

        <FrameLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clipToPadding="false"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/panelAddress"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_nav_desgin"
                android:elevation="18dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/bottom_home_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ripple"
                    android:clickable="true"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_icon_home"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/default_200"
                        android:visibility="gone" />
                    <LinearLayout
                        android:id="@+id/ll_home_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_bottom_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_home_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:text="@string/home_tc"
                            android:textColor="@color/black_v2"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ripple"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_icon_earnings"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/default_200"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/bottom_earnings_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/earnings_bottom_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/custom_ripple"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/tv_earnings_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:text="@string/earnings_tc"
                            android:textColor="@color/black_v2"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/custom_ripple"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_icon_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/default_200"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/bottom_product_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/borrow_bottom_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/custom_ripple"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/tv_borrow_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:text="@string/insurance_tv_v2"
                            android:textColor="@color/black_v2"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stats_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/custom_ripple"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_icon_history"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/default_200"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/insurance_bottom_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_insurance_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:text="@string/loan_tv_v2"
                            android:textColor="@color/black_v2"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/custom_ripple"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_profile"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/default_200"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profile_page_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/profile_page_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:text="@string/profile_tv_v2"
                            android:textColor="@color/black_v2"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>
</layout>