<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dimen_20dp"
        tools:context=".view.refer.view.ui.ReferralCodeFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/ic_selector_bg">

            <ImageView
                android:id="@+id/ic_src"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/stars" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back_icon_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_toEndOf="@+id/iv_back"
                    android:fontFamily="@font/opensanssemibold"
                    android:text="@string/refer_and_earn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_circle_red">

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_surprise" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/ic_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/stars" />

            <RelativeLayout
                android:id="@+id/rl_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:background="@drawable/ic_background_rect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dimen_8dp"
                    android:paddingEnd="0dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensanssemibold"
                    android:text="Referral Code"
                    android:textColor="#555555" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dimen_8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_referral_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_8dp"
                        android:paddingEnd="0dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensansextrabold"
                        android:text="B67GTYD"
                        android:textColor="#555555" />

                    <ImageView
                        android:id="@+id/iv_copy"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:src="@drawable/ic_clipboard"
                        android:layout_height="wrap_content">

                    </ImageView>

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</layout>