<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_additional_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Additional Shift Incentive"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/black_v2"
            android:textSize="@dimen/font_12sp"/>

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_grey_tick"
            android:layout_toStartOf="@+id/tv_amount_guarantee"
            android:layout_marginEnd="@dimen/dimen_30dp" />

        <TextView
            android:id="@+id/tv_amount_guarantee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$3000"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/black_v2"
            android:textSize="@dimen/font_16sp"/>





    </RelativeLayout>
</layout>