<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efefef">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fdf0eb"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp">

                            <ImageView
                                android:id="@+id/iv_back_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:padding="@dimen/dimen_4dp"
                                android:src="@drawable/ic_back_arrow_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/iv_back_button"
                                android:gravity="start"
                                android:text="@string/transaction_history"
                                android:textColor="@color/black_v2"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_notification_v2"
                                android:visibility="invisible"
                                tools:visibility="visible" />

                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                android:src="@drawable/background_3" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="136dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginEnd="24dp"
                                    android:background="@drawable/ic_history_card"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingTop="20dp"
                                        android:text="@string/mitra_balance"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingBottom="20dp"
                                        android:text="â‚¹ ----"
                                        android:textColor="@color/white"
                                        android:textSize="46sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_all"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensanssemibold"
                                    android:gravity="center"
                                    android:text="@string/all"
                                    android:textColor="@color/black_v2"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_money_cash"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/opensansregular"
                                    android:gravity="center"
                                    android:text="@string/money_in"
                                    android:textColor="@color/light_color_heading"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/money_out"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/opensansregular"
                                    android:gravity="center"
                                    android:text="@string/money_out"
                                    android:textColor="@color/light_color_heading"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <View
                                    android:id="@+id/view_one"
                                    android:layout_width="46dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:background="#F60202" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <View
                                    android:id="@+id/view_two"
                                    android:layout_width="46dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:background="#F60202"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <View
                                    android:id="@+id/view_three"
                                    android:layout_width="46dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:background="#F60202"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DDDDDD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9F9F9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/sort_parent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/sort_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_sort" />

                                    <TextView
                                        android:id="@+id/sort_0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/sort_1"
                                        android:fontFamily="sans-serif-light"
                                        android:text="@string/sort_by"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />

                                    <ImageView
                                        android:id="@+id/down_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@id/sort_0"
                                        android:src="@drawable/down_arrow_1" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/sort_type_heading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="@string/latest_to_oldest"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/verticle_line" />


                            <LinearLayout
                                android:id="@+id/filter_parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/sort_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_filter" />

                                    <TextView
                                        android:id="@+id/sort_12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/sort_2"
                                        android:fontFamily="sans-serif-light"
                                        android:text="@string/filter_by"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />

                                    <ImageView
                                        android:id="@+id/down2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@id/sort_12"
                                        android:src="@drawable/down_arrow_1" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/filter_applied_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    tools:text="2 Applied" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DDDDDD" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_150dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/history_each_row" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--        <include layout="@layout/sort_bottom_sheet" />-->

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.core.widget.NestedScrollView>
        <!-- cash-out Ui       -->
        <LinearLayout
            android:id="@+id/cashout_card_hold_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cashoutHold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_background_corner"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_hold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:weightSum="3"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivIconHold"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_24dp"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:src="@drawable/ic_cashout_hold" />

                    <LinearLayout
                        android:id="@+id/ll_desc_hold_container"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:paddingStart="@dimen/dimen_12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cashOutHoldTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/opensansregular"
                            android:textStyle="bold"
                            tools:text="Cashout on hold"/>


                        <TextView
                            android:id="@+id/cashOutHoldTxtDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensanssemibold"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            tools:text="Zepto cash deposit pending" />


                    </LinearLayout>

                    <View
                        android:layout_marginTop="@dimen/dimen_14dp"
                        android:layout_marginBottom="@dimen/dimen_14dp"
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_marginEnd="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/hex"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:paddingEnd="@dimen/dimen_10dp"
                        android:layout_gravity="center_vertical|end">

                        <TextView
                            android:id="@+id/tv_cashoutAvailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Available Cashout"
                            android:textColor="@color/faded_grey"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_below="@+id/tv_cashoutAvailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/set_price_exp_hold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="8"
                                android:fontFamily="@font/opensansextrabold"
                                android:maxLines="1"
                                android:paddingEnd="4dp"
                                android:text="@string/_36000"
                                android:textColor="@color/faded_grey"
                                android:textSize="14sp"/>

                            <ImageView
                                android:id="@+id/forward_img_exp_hold"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_forward_white"/>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cashout_card_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/cashoutTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/blue_cashout_6_corner"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_icon_fire"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_cashout_logo" />

                <TextView
                    android:id="@+id/cashOut_config_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.8"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="12sp"
                    tools:text="Eligible for Cashout in 20 days!" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/white" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cash_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_background_corner"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_grey"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/app_name"
                    android:elevation="2dp"
                    android:src="@drawable/blue_background_corner_grey"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/secure_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/canhout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen_20dp"
                        android:drawablePadding="@dimen/dimen_4dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="@string/cashout_available"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_cashout_logo" />

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="0dp"
                    android:background="@color/hex"
                    app:layout_constraintStart_toStartOf="@+id/set_price"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </View>
                <TextView
                    android:id="@+id/set_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/secure_layout"
                    android:background="#00000000"
                    android:textStyle="bold"
                    android:maxLength="8"
                    android:fontFamily="@font/opensanssemibold"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/_36000"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/forward_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/forward_img"
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="18dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_forward_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cash_layout_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_background_corner"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/img_grey_exp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/app_name"
                    android:elevation="2dp"
                    android:src="@drawable/blue_background_corner_grey"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/exp_flow_logic"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_24dp"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:src="@drawable/ic_cashout_logo" />

                    <LinearLayout
                        android:id="@+id/ll_desc_container"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:paddingStart="@dimen/dimen_12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cashout_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/opensansregular"
                            android:textStyle="bold"
                            tools:text="Your Cashout limit is 50% percent"/>

                        <ProgressBar
                            android:id="@+id/cashoutProgressBar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_2dp"/>

                        <TextView
                            android:id="@+id/cashOutConfigTxtDetailExp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/dimen_7dp"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            tools:text="Complete 50 trips in 10 days\n to increase limit to 70%" />


                    </LinearLayout>

                    <View
                        android:layout_marginTop="@dimen/dimen_14dp"
                        android:layout_marginBottom="@dimen/dimen_14dp"
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_marginEnd="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/hex"/>

