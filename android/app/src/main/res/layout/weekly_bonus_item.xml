<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_milestone"
            android:textColor="@color/black_v2"
            android:textSize="@dimen/font_12sp"
            android:fontFamily="@font/opensansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="101+">
        </TextView>

        <TextView
            android:id="@+id/tv_milestone_slab"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:layout_toEndOf="@+id/tv_milestone"
            android:textColor="@color/grey979797"
            android:textSize="@dimen/font_10sp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:fontFamily="@font/opensansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ex(101+, 102+ 103+)">
        </TextView>

        <TextView
            android:id="@+id/tv_milestone_amount"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textColor="@color/black_v2"
            android:textSize="@dimen/font_14sp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/opensansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$35">
        </TextView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_below="@+id/tv_milestone_amount"
            android:layout_marginBottom="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_9dp"
            android:background="@color/white"/>



    </RelativeLayout>
</layout>