<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.earn.view.ui.HomeFragment">

        <!--Top Container-->
        <RelativeLayout
            android:id="@+id/bac_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="@dimen/dimen_22dp"
            android:layout_marginEnd="20dp">


            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dimen_8dp"
                android:src="@drawable/ic_hamburger"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_toEndOf="@+id/profile"
                android:fontFamily="@font/opensansextrabold"
                android:textColor="@color/black_v2"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

            <RelativeLayout
                android:id="@+id/notification"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                <RelativeLayout
                    android:id="@+id/freshchat_notification_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_group"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/chat_count"
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/chat"
                        android:layout_alignEnd="@+id/chat"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_ellipse_unread"
                        android:contentDescription="@string/app_name"
                        android:gravity="center"
                        tools:text="0"
                        android:fontFamily="@font/opensanssemibold"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_notification_icon_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/freshchat_notification_container"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/ic_union"
                    android:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/notification_container_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/notification_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_union" />

                    <ImageView
                        android:id="@+id/img_read"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignTop="@+id/notification_light"
                        android:layout_alignEnd="@+id/notification_light"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_ellipse_unread" />
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_below="@+id/bac_button_container"
            android:id="@+id/shimmer_view_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            app:auto_start="true"
            tools:visibility="visible">

            <include
                android:id="@+id/internal_shimmer"
                layout="@layout/home_fragment_layout_shimmer" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bac_button_container">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_200dp">


                <!--Upload Doc container-->
                <LinearLayout
                    android:id="@+id/rl_place_holder_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/top_snake_bar_color"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp"
                    android:visibility="gone"
                    android:weightSum="3"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/document_pending_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawablePadding="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/opensanssemibold"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dimen_20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/placeholder_color"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_alert_12"
                        tools:text="Upload Document" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/document_navigation_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="4dp"
                            android:fontFamily="@font/opensansregular"
                            android:gravity="end"
                            android:paddingStart="@dimen/dimen_20dp"
                            android:paddingEnd="@dimen/dimen_6dp"
                            android:text="@string/update_now_home"
                            android:textColor="@color/black_v2"
                            android:textSize="11sp" />

                        <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_forward_v2"
                            app:tint="@color/black_v2" />

                    </LinearLayout>


                </LinearLayout>
                <!--Upcoming slot layout container-->
                <RelativeLayout
                    android:id="@+id/rl_slot_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_place_holder_document"
                    android:background="@color/slot_number"
                    android:padding="@dimen/dimen_4dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/iv_scooter_container"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginStart="@dimen/dimen_10dp">

                        <ImageView
                            android:id="@+id/iv_scooter"
                            android:layout_width="@dimen/dimen_60dp"
                            android:layout_height="@dimen/dimen_50dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_nudge_icon" />

                        <TextView
                            android:id="@+id/tv_earning_amount_nudge"
                            android:layout_width="@dimen/dimen_50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/dimen_2dp"
                            android:layout_marginBottom="13dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensansextrabold"
                            android:maxLines="1"
                            android:paddingStart="@dimen/dimen_3dp"
                            android:singleLine="true"
                            android:text="5000 more"
                            android:textColor="@color/black_v2"
                            android:textSize="7dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_slot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/iv_scooter_container"
                        android:fontFamily="@font/opensanssemibold"
                        android:gravity="start"
                        android:text="@string/no_slot_available"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_v2"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_attendance_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_toEndOf="@+id/iv_scooter_container"
                        android:fontFamily="@font/opensanssemibold"
                        android:gravity="start"
                        android:text="@string/no_slot_available"
                        android:textAlignment="textStart"
                        android:visibility="gone"
                        android:textColor="@color/black_v2"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <!--Dynamic Banner-->
                <RelativeLayout
                    android:id="@+id/dynamic_banner_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_180dp"
                    android:layout_below="@+id/rl_slot_container"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    tools:visibility="visible">

                    <com.vahan.mitra_playstore.utils.CustomViewPager
                        android:id="@+id/viewpage_inner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_150dp" />

                    <LinearLayout
                        android:id="@+id/SliderDots_inner"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/viewpage_inner"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dynamic_banner_viewpager2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_150dp"
                    android:layout_below="@+id/dynamic_banner_viewpager"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    tools:visibility="visible">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpage_inner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <!--Entry Point 2-->
                <!--                <RelativeLayout-->
                <!--                    android:id="@+id/dynamic_banner_entrypoint2"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    tools:visibility="visible"-->
                <!--                    android:layout_below="@+id/dynamic_banner_viewpager"-->
                <!--                    android:layout_marginTop="@dimen/dimen_20dp">-->

                <!--&lt;!&ndash;                    <androidx.viewpager.widget.ViewPager&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:id="@+id/viewpager_entrypoint2"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_width="wrap_content"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_height="wrap_content"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_centerInParent="true"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_gravity="center"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_margin="10dp" />&ndash;&gt;-->

                <!--                    <androidx.recyclerview.widget.RecyclerView-->
                <!--                        android:id="@+id/rv_entrypoint"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginStart="@dimen/dimen_20dp"-->
                <!--                        android:layout_marginEnd="@dimen/dimen_20dp"-->
                <!--                        android:orientation="horizontal"-->
                <!--                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
                <!--                        tools:listitem="@layout/entry_point2_item" />-->

                <!--                </RelativeLayout>-->

                <!--rv parent container-->
                <RelativeLayout
                    android:id="@+id/rl_parent_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dynamic_banner_viewpager2"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <!--Incentive Container-->
                    <RelativeLayout
                        android:id="@+id/rl_incentive_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_27dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_incentives"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="@string/incentives"
                            android:textColor="@color/black_v2"
                            android:textSize="@dimen/font_20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_incentives_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_incentives"
                            android:fontFamily="@font/opensanslight"
                            android:text="@string/weekly_incentives_will_be_credited_at_the_end_of_the_week"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/font_12sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_earning"
                            android:layout_width="match_parent"
                            android:layout_height="475dp"
                            android:layout_below="@+id/tv_incentives_desc"
                            android:nestedScrollingEnabled="true"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                    </RelativeLayout>
                    <!--History Container-->
                    <RelativeLayout
                        android:id="@+id/rl_history_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_incentive_container"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="@string/transaction_history"
                            android:textColor="@color/black_v2"
                            android:textSize="@dimen/font_20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_view_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/button_border_outlined"
                            android:fontFamily="@font/opensanslight"
                            android:paddingStart="@dimen/dimen_16dp"
                            android:paddingTop="@dimen/dimen_7dp"
                            android:paddingEnd="@dimen/dimen_16dp"
                            android:paddingBottom="@dimen/dimen_7dp"
                            android:text="@string/view_all"
                            android:textColor="@color/default_200"
                            android:textSize="@dimen/font_12sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_history"
                            android:layout_width="match_parent"
                            android:layout_height="475dp"
                            android:layout_below="@+id/tv_view_all"
                            android:nestedScrollingEnabled="true"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_no_document"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/opensanssemibold"
                        android:gravity="center"
                        android:text="@string/no_history_available"
                        android:textColor="@color/black_v2"
                        android:textSize="26sp" />

                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <!-- cash-out Ui       -->
        <LinearLayout
            android:id="@+id/cashout_card_hold_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/blue_background_corner"
            tools:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_hold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivIconHold"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_24dp"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:src="@drawable/ic_cashout_hold" />

                    <LinearLayout
                        android:id="@+id/ll_desc_hold_container"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:paddingStart="@dimen/dimen_12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cashOutHoldTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/opensansregular"
                            android:textStyle="bold"
                            tools:text="@string/cashout_on_hold"/>


                        <TextView
                            android:id="@+id/cashOutHoldTxtDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensanssemibold"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            tools:text="@string/zepto_cash_deposit_pending" />


                    </LinearLayout>

                    <View
                        android:layout_marginTop="@dimen/dimen_14dp"
                        android:layout_marginBottom="@dimen/dimen_14dp"
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_marginEnd="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/hex"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:paddingEnd="@dimen/dimen_10dp"
                        android:layout_gravity="center_vertical|end">

                        <TextView
                            android:id="@+id/tv_cashoutAvailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="@string/available_cashout"
                            android:textColor="@color/faded_grey"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_below="@+id/tv_cashoutAvailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/set_price_exp_hold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="8"
                                android:fontFamily="@font/opensansextrabold"
                                android:maxLines="1"
                                android:paddingEnd="4dp"
                                android:text="@string/rupee"
                                android:textColor="@color/faded_grey"
                                android:textSize="14sp"/>

                            <ImageView
                                android:id="@+id/forward_img_exp_hold"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_forward_white"/>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cashout_card_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/cashoutTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/blue_cashout_6_corner"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_icon_fire"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_cashout_logo" />

                <TextView
                    android:id="@+id/cashOut_config_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.8"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="12sp"
                    tools:text="Eligible for Cashout in 20 days!" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/white" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cash_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_background_corner"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_grey"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/app_name"
                    android:elevation="2dp"
                    android:src="@drawable/blue_background_corner_grey"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/secure_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/canhout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen_20dp"
                        android:drawablePadding="@dimen/dimen_4dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="@string/cashout_available"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_cashout_logo" />

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="0dp"
                    android:background="@color/hex"
                    app:layout_constraintStart_toStartOf="@+id/set_price"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </View>
                <TextView
                    android:id="@+id/set_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/secure_layout"
                    android:background="#00000000"
                    android:textStyle="bold"
                    android:maxLength="8"
                    android:fontFamily="@font/opensanssemibold"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/_36000"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/forward_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/forward_img"
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="18dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_forward_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cash_layout_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_background_corner"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/img_grey_exp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/app_name"
                    android:elevation="2dp"
                    android:src="@drawable/blue_background_corner_grey"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/exp_flow_logic"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_24dp"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:src="@drawable/ic_cashout_logo" />

                    <LinearLayout
                        android:id="@+id/ll_desc_container"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:paddingStart="@dimen/dimen_12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cashout_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/opensansregular"
                            android:textStyle="bold"
                            tools:text="Your Cashout limit is 50% percent"/>

                        <ProgressBar
                            android:id="@+id/cashoutProgressBar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_2dp"/>

                        <TextView
                            android:id="@+id/cashOutConfigTxtDetailExp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/dimen_7dp"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            tools:text="Complete 50 trips in 10 days\n to increase limit to 70%" />


                    </LinearLayout>

                    <View
                        android:layout_marginTop="@dimen/dimen_14dp"
                        android:layout_marginBottom="@dimen/dimen_14dp"
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_marginEnd="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/hex"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:paddingEnd="@dimen/dimen_10dp"
                        android:layout_gravity="center_vertical|end">

                        <TextView
                            android:id="@+id/tv_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="@string/you_can_cashout"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_below="@+id/tv_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/set_price_exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:maxLength="8"
                                android:fontFamily="@font/opensansextrabold"
                                android:maxLines="1"
                                android:paddingEnd="4dp"
                                android:text="@string/_36000"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/forward_img_exp"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_forward_white"/>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>