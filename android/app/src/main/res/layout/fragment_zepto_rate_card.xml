<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ratecard.ui.ZeptoRateCardFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_back_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:padding="@dimen/dimen_4dp"
                android:src="@drawable/ic_back_arrow_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_rate_card_back" />

            <TextView
                android:id="@+id/tv_rate_card_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:text="@string/rate_card"
                android:textColor="@color/black_v2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_back_button"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/rl_spinner_container"
            android:layout_below="@+id/cl_back_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_week_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_19dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="Monday - Sunday"
                android:textColor="@color/black_v2"
                android:textSize="@dimen/dimen_12dp" />

            <TextView
                android:id="@+id/tv_weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:layout_toEndOf="@+id/tv_week_name"
                android:background="@drawable/view_border_grey_filled"

                android:paddingStart="@dimen/dimen_8dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:text="@string/weekly"
                android:textColor="@color/grey2"
                android:textSize="@dimen/dimen_12dp" />

            <!--            <ImageView-->
            <!--                android:id="@+id/iv_arrow_down"-->
            <!--                android:layout_width="@dimen/dimen_11dp"-->
            <!--                android:layout_height="@dimen/dimen_11dp"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginTop="@dimen/dimen_28dp"-->
            <!--                android:layout_marginEnd="@dimen/dimen_21dp"-->
            <!--                android:src="@drawable/arrow_down_float"-->
            <!--                app:tint="@color/grey2" />-->

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_28dp"
                android:layout_marginEnd="@dimen/dimen_21dp"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:clickable="true"
                    android:background="@drawable/arrow_down_float"
                    android:backgroundTint="@color/grey2"
                    android:dropDownVerticalOffset="-15dp"
                    android:spinnerMode="dropdown"
                    android:focusable="true" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_selected_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:layout_marginEnd="6dp"
                android:layout_toStartOf="@+id/linearLayout"

                tools:text="@string/sfx"
                android:textColor="@color/black_v2"
                android:textSize="@dimen/dimen_12dp" />

            <ImageView
                android:id="@+id/iv_selected_company_logo"
                android:layout_width="@dimen/dimen_22dp"
                android:layout_height="@dimen/dimen_22dp"
                android:layout_marginTop="@dimen/dimen_23dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_toStartOf="@+id/tv_selected_company_name" />

        </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="3"
           android:layout_below="@+id/rl_spinner_container"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2.7">

               <ScrollView
                   android:id="@+id/sVContainer"
                   android:layout_marginTop="@dimen/dimen_20dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <!--MinmumGuarntee-->
                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/rv_minimum_guarantee"
                           android:layout_width="match_parent"
                           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                           android:orientation="vertical"
                           android:layout_height="wrap_content">

                       </androidx.recyclerview.widget.RecyclerView>
                       <!--Base pay-->
                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/rv_base_pay"
                           android:layout_marginTop="@dimen/dimen_30dp"
                           android:layout_marginStart="@dimen/dimen_20dp"
                           android:layout_marginEnd="@dimen/dimen_20dp"
                           android:layout_below="@+id/rv_minimum_guarantee"
                           android:layout_width="match_parent"
                           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                           android:orientation="vertical"
                           android:layout_height="wrap_content">

                       </androidx.recyclerview.widget.RecyclerView>
                       <!--Weekly Bonus-->
                       <RelativeLayout
                           android:layout_below="@id/rv_base_pay"
                           android:id="@+id/rl_base_pay"
                           android:layout_marginStart="@dimen/dimen_20dp"
                           android:layout_marginEnd="@dimen/dimen_20dp"
                           android:layout_marginTop="@dimen/dimen_20dp"
                           android:padding="16dp"
                           android:background="@drawable/grey_filled_bg_6radius"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:id="@+id/tv_weekly_bonus"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="12dp"
                               tools:text="Weekly Bonus"
                               android:fontFamily="@font/opensansbold"
                               android:textColor="@color/black_v2"
                               android:textSize="14sp"
                               android:textStyle="bold" />

                           <View
                               android:id="@+id/v_line"
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:background="@color/greyD6D6D6"
                               android:layout_marginTop="@dimen/dimen_10dp"
                               android:layout_below="@+id/tv_weekly_bonus">

                           </View>

                           <TextView
                               android:layout_below="@+id/v_line"
                               android:id="@+id/tv_complete_order"
                               android:layout_width="wrap_content"
                               tools:text="Completed Orders"
                               android:textColor="@color/grey333333"
                               android:layout_marginTop="@dimen/dimen_10dp"
                               android:fontFamily="@font/opensansbold"
                               android:textSize="@dimen/dimen_10dp"
                               android:layout_height="wrap_content">

                           </TextView>

                           <TextView
                               android:layout_below="@+id/v_line"
                               android:id="@+id/tv_additional_amount"
                               android:layout_width="wrap_content"
                               tools:text="Aditional Amount"
                               android:textSize="@dimen/dimen_12dp"
                               android:fontFamily="@font/opensansbold"
                               android:layout_marginTop="@dimen/dimen_10dp"
                               android:textColor="@color/grey333333"
                               android:layout_alignParentEnd="true"
                               android:layout_height="wrap_content">

                           </TextView>

                           <TextView
                               android:layout_below="@+id/tv_additional_amount"
                               android:id="@+id/tv_per_order"
                               android:layout_width="wrap_content"
                               android:textSize="@dimen/dimen_10dp"
                               android:fontFamily="@font/opensanssemibold"
                               android:textColor="@color/grey"
                               android:layout_alignParentEnd="true"
                               tools:text="Per Orders"
                               android:layout_height="wrap_content">

                           </TextView>

                           <androidx.recyclerview.widget.RecyclerView
                               android:id="@+id/rv_slabs_weekly_earning"
                               android:layout_below="@+id/tv_per_order"
                               android:layout_width="match_parent"
                               app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                               android:orientation="vertical"
                               android:layout_height="wrap_content">

                           </androidx.recyclerview.widget.RecyclerView>

                           <View
                               android:id="@+id/v_line_below"
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:background="@color/grey13"
                               android:layout_below="@+id/rv_slabs_weekly_earning">

                           </View>

                           <TextView
                               android:layout_below="@+id/v_line_below"
                               android:id="@+id/tv_weekly_basis"
                               android:fontFamily="@font/opensansbold"
                               android:textSize="@dimen/dimen_8dp"
                               android:textColor="@color/grey14"
                               android:layout_marginTop="@dimen/dimen_8dp"
                               android:layout_width="wrap_content"
                               tools:text="Credited On weekly basis"
                               android:layout_height="wrap_content">

                           </TextView>

                       </RelativeLayout>
                       <!-- Other Pay-->
                       <TextView
                           android:layout_marginTop="@dimen/dimen_22dp"
                           android:layout_below="@+id/rl_base_pay"
                           android:id="@+id/tv_other_pay"
                           android:fontFamily="@font/opensanssemibold"
                           android:textSize="@dimen/dimen_14dp"
                           android:layout_marginStart="@dimen/dimen_20dp"
                           android:layout_marginEnd="@dimen/dimen_20dp"
                           android:textColor="@color/black_v2"
                           android:layout_width="wrap_content"
                           android:text="Other Pay"
                           android:layout_height="wrap_content">

                       </TextView>

                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/rv_addition"
                           android:layout_marginStart="@dimen/dimen_20dp"
                           android:layout_marginEnd="@dimen/dimen_20dp"
                           android:layout_marginTop="@dimen/dimen_30dp"
                           android:layout_below="@+id/tv_other_pay"
                           android:layout_width="match_parent"
                           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                           android:orientation="vertical"
                           android:layout_height="wrap_content">

                       </androidx.recyclerview.widget.RecyclerView>

                   </RelativeLayout>


               </ScrollView>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.3">

               <RelativeLayout
                   android:id="@+id/rl_calculate_income"
                   android:background="@drawable/button_border15radius"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:backgroundTint="@null"
                   android:layout_marginStart="@dimen/dimen_20dp"
                   android:layout_marginEnd="@dimen/dimen_20dp"
                   android:paddingTop="@dimen/dimen_8dp"
                   android:paddingBottom="@dimen/dimen_8dp"

                   android:visibility="gone"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:clickable="true"
                   android:focusable="true">

                   <ImageView
                       android:id="@+id/iv_calculate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:src="@drawable/calculate"
                       android:scaleType="centerInside" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_marginStart="@dimen/dimen_8dp"
                       android:layout_toEndOf="@+id/iv_calculate"
                       android:layout_centerVertical="true"
                       android:text="Calculate your Income"
                       android:textColor="@color/white"
                       android:textSize="16sp" />
               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>


    </RelativeLayout>
</layout>