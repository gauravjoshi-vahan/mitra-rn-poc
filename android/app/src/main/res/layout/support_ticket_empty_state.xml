<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dimen_20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emptyImg"
                android:layout_width="@dimen/dimen_180dp"
                android:layout_height="@dimen/dimen_180dp"
                android:src="@drawable/empty_state" />

            <TextView
                android:id="@+id/noTicketsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/no_tickets_yet"
                android:textColor="@color/black_v2"
                android:textSize="@dimen/font_16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backBtn" />

            <TextView
                android:id="@+id/noTicketsDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:text="@string/no_tickets_yet_desc"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backBtn" />

            <Button
                android:id="@+id/goHomeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/go_back_to_home"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:fontFamily="@font/opensanssemibold"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:layout_marginStart="@dimen/dimen_50dp"
                android:layout_marginEnd="@dimen/dimen_50dp"/>

        </LinearLayout>
    </RelativeLayout>

</layout>