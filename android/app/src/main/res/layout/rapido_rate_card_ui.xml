<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llWeeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/llRideOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvRideOption1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/opensansbold"
                        android:gravity="center"
                        android:text="Bike Taxi"
                        android:textColor="@color/black_v2"
                        android:textSize="12sp" />
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/llRideOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvRideOption2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensansbold"
                        android:gravity="center"
                        android:text="Food Delivery"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:id="@+id/view_one"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_orange_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/view_two"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_grey_bg"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:id="@+id/view_three"
                        android:layout_width="46dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="#F60202"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_text_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="@dimen/dimen_8dp"
            android:background="@drawable/ic_ratecard_structure"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_below="@id/llWeeks">

            <TextView
                android:id="@+id/tv_title_redirection"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:paddingStart="@dimen/dimen_6dp"
                android:textColor="@color/black_v2"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                tools:text="Hello"/>

        </LinearLayout>



        <ImageView
            android:id="@+id/ivRapidoPayList"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:scaleType="fitXY"
            android:layout_below="@id/ll_text_container"/>

        <ImageView
            android:id="@+id/ivRapidoPayListTwo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:scaleType="fitXY"
            android:layout_below="@id/ll_text_container"/>
    </LinearLayout>

    </ScrollView>


</layout>