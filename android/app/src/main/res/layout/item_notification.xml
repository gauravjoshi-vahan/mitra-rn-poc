<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:background="@color/unread_notification_background">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_partener_logo"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_logo"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Your McDonald’s Earnings of ₹ 600 was credited to Mitra Wallet"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="48dp"
            android:textColor="@color/black"
            android:lines="2" />
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_logo"
            android:layout_marginTop="6dp"
            android:text="8 July, 9:04 AM"
            android:textSize="10sp"

            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/img_logo"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:id="@+id/img_read"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ellipse_unread"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/img_logo"
            android:layout_marginEnd="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/txt_date"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>